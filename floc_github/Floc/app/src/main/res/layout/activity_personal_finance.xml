<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_personal_finance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_blue"
    tools:context="com.cleanslatetech.floc.activities.PersonalFinanceActivity">

    <include layout="@layout/appbar_layout" />

    <com.cleanslatetech.floc.utilities.OpenSansTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="@color/colorPrimary"
        android:text="@string/financial"
        android:textColor="@color/white"
        android:textSize="@dimen/register_screen_texts"
        android:textAlignment="center"
        android:textAllCaps="true"
        app:OpenSans="openSans_regular"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/fourty_space"
            android:paddingRight="@dimen/fourty_space"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:paddingBottom="@dimen/fourty_space">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.cleanslatetech.floc.utilities.OpenSansEditText
                    android:id="@+id/personal_bank_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/white_border"
                    android:hint="@string/hint_bank_name"
                    android:textColorHint="@color/hint"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteen_textsize"
                    android:textAlignment="center"
                    app:OpenSans="openSans_regular"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.cleanslatetech.floc.utilities.OpenSansEditText
                    android:id="@+id/personal_bank_branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/white_border"
                    android:hint="@string/hint_branch"
                    android:textColorHint="@color/hint"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteen_textsize"
                    android:textAlignment="center"
                    app:OpenSans="openSans_regular"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.cleanslatetech.floc.utilities.OpenSansEditText
                    android:id="@+id/personal_bank_Ifsc_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/white_border"
                    android:hint="@string/hint_ifsc_code"
                    android:textColorHint="@color/hint"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteen_textsize"
                    android:textAlignment="center"
                    app:OpenSans="openSans_regular"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.cleanslatetech.floc.utilities.OpenSansEditText
                    android:id="@+id/personal_bank_account_numner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/white_border"
                    android:hint="@string/hint_account_number"
                    android:textColorHint="@color/hint"
                    android:inputType="numberSigned"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteen_textsize"
                    android:textAlignment="center"
                    app:OpenSans="openSans_regular"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <com.cleanslatetech.floc.utilities.OpenSansButton
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="end"
                    android:text="@string/update"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:OpenSans="openSans_regular" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
