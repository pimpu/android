<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/recentFlocBg"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="@dimen/activity_horizontal_margin">

        <com.cleanslatetech.floc.utilities.OpenSansTextView
            android:id="@+id/tvRecentFlocName"
            android:layout_width="@dimen/event_image_column_height"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fourteen_textsize"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:freezesText="true"
            app:OpenSans="openSans_regular" />
    </LinearLayout>

</LinearLayout>