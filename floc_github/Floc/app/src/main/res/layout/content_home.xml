<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:id="@+id/content_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cleanslatetech.floc.activities.HomeActivity"
    tools:showIn="@layout/activity_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/selectIntrest_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="#626365">

            <ProgressBar
                android:id="@+id/getCategoryProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressBackgroundTint="@color/white"
                android:visibility="gone" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnRefreshgetCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center"
                android:visibility="gone"
                android:text="@string/try_again"
                android:textColor="@color/blackOpacity" />

            <com.cleanslatetech.floc.utilities.OpenSansTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="5dp"
                android:text="@string/click_on_at_least_5_interests_below"
                android:textSize="@dimen/sixteen_textsize"
                android:textColor="@color/white"
                android:textAlignment="textStart"
                app:OpenSans="openSans_regular" />

            <GridView
                android:id="@+id/gridviewInterest"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/twoFifty_height"
                android:nestedScrollingEnabled="true"
                android:visibility="gone"
                android:clipToPadding="false"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:columnWidth="150dp"
                android:numColumns="auto_fit"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:stretchMode="columnWidth" />

            <com.cleanslatetech.floc.utilities.OpenSansTextView
                android:id="@+id/tvBtnSaveInterest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_vertical|end"
                android:padding="@dimen/grid_column_textsize"
                android:text="@string/save"
                android:textSize="@dimen/register_screen_texts"
                android:textColor="@color/colorPrimary"
                android:textAlignment="textEnd"
                app:OpenSans="openSans_regular" />
        </LinearLayout>

        <com.chabbal.slidingdotsplash.SlidingSplashView
            android:id="@+id/slider_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/twoFifty_height"
            app:imageResources="@array/img_id_arr" />

        <com.cleanslatetech.floc.utilities.OpenSansTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="@string/recent_flocs"
            android:textSize="@dimen/login__screen_texts"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            app:OpenSans="openSans_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/activity_vertical_margin">

            <GridView
                android:id="@+id/gridviewRecentFloc"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/three_hundred_height"
                android:nestedScrollingEnabled="true"
                android:columnWidth="150dp"
                android:numColumns="auto_fit"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="20dp"
                android:stretchMode="columnWidth" />

            <com.cleanslatetech.floc.utilities.OpenSansTextView
                android:id="@+id/tvBtnMoreRecentFloc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginTop="@dimen/fab_margin"
                android:text="@string/more"
                android:textSize="@dimen/login__screen_texts"
                android:textColor="@color/white"
                android:textAlignment="textEnd"
                app:OpenSans="openSans_regular" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_home_event_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.cleanslatetech.floc.utilities.OpenSansTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/events"
                android:textSize="@dimen/login__screen_texts"
                android:textColor="@color/white"
                android:textAlignment="textStart"
                app:OpenSans="openSans_regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/activity_vertical_margin">

                <GridView
                    android:id="@+id/gridviewEvent"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/three_hundred_height"
                    android:nestedScrollingEnabled="true"
                    android:columnWidth="150dp"
                    android:numColumns="auto_fit"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="20dp"
                    android:stretchMode="columnWidth" />

                <com.cleanslatetech.floc.utilities.OpenSansTextView
                    android:id="@+id/tvBtnMoreEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:text="@string/more"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:textSize="@dimen/login__screen_texts"
                    android:textColor="@color/white"
                    android:textAlignment="textEnd"
                    app:OpenSans="openSans_regular" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
