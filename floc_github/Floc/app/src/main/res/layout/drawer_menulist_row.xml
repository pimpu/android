<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/fab_margin">

    <ImageView
        android:id="@+id/drawer_menu_image"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:src="@drawable/logo"/>

    <com.cleanslatetech.floc.utilities.OpenSansTextView
        android:id="@+id/drawer_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/drawer_menu_image"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_centerVertical="true"
        android:text="Menus"
        android:textColor="@color/title"
        android:textSize="@dimen/sixteen_textsize"
        app:OpenSans="openSans_regular" />

</RelativeLayout>