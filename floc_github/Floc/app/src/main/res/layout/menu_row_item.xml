<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <com.cleanslatetech.floc.utilities.OpenSansTextView
        android:id="@+id/txtMenuName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:text="OR"
        android:textColor="@color/white"
        android:textSize="@dimen/sixteen_textsize"
        app:OpenSans="openSans_regular" />

    <ImageView
        android:id="@+id/subMenuOptionIcon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:src="@android:drawable/ic_media_play"
        android:contentDescription="submenu icon" />
</RelativeLayout>