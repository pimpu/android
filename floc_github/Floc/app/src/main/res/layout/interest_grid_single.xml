<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/transparent_rounded_rectangle">

    <com.cleanslatetech.floc.utilities.OpenSansTextView
        android:id="@+id/tv_interest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:text="@string/events"
        android:textSize="@dimen/fourteen_textsize"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:OpenSans="openSans_regular" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/imgBtn_selectInterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="7dp"
        android:src="@drawable/plus"
        android:background="@drawable/transparent_rounded_rectangle"/>

</RelativeLayout>