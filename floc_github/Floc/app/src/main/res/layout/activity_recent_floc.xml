<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_recent_floc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_blue"
    tools:context="com.cleanslatetech.floc.activities.RecentFlocActivity">

    <include layout="@layout/appbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.cleanslatetech.floc.utilities.OpenSansTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingRight="12dp"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@color/colorPrimary"
                android:text="@string/experiential"
                android:textColor="@color/white"
                android:textSize="@dimen/register_screen_texts"
                android:textAlignment="center"
                android:textAllCaps="true"
                app:OpenSans="openSans_regular"
                android:drawableRight="@android:drawable/arrow_down_float"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/horizontal_recyclerview_experientialFloc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.cleanslatetech.floc.utilities.OpenSansTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingRight="12dp"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@color/colorPrimary"
                android:text="@string/professional"
                android:textColor="@color/white"
                android:textSize="@dimen/register_screen_texts"
                android:textAlignment="center"
                android:textAllCaps="true"
                app:OpenSans="openSans_regular"
                android:drawableRight="@android:drawable/arrow_down_float"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/horizontal_recyclerview_professionalFloc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.cleanslatetech.floc.utilities.OpenSansTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingRight="12dp"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@color/colorPrimary"
                android:text="@string/personal"
                android:textColor="@color/white"
                android:textSize="@dimen/register_screen_texts"
                android:textAlignment="center"
                android:textAllCaps="true"
                app:OpenSans="openSans_regular"
                android:drawableRight="@android:drawable/arrow_down_float"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/horizontal_recyclerview_persionalFloc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
