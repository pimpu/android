<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="105dp"
    android:layout_height="match_parent"
    android:id="@+id/share_floc_window"
    android:weightSum="1">

    <com.cleanslatetech.floc.utilities.OpenSansTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/com_facebook_button_background"
        android:padding="12dp"
        android:text="Facebook"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:OpenSans="openSans_regular"
        android:onClick="onClickFacebookShare" />

    <com.cleanslatetech.floc.utilities.OpenSansTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/google_color"
        android:padding="12dp"
        android:text="Google"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:OpenSans="openSans_regular"
        android:onClick="onClickGoogleShare" />

    <com.cleanslatetech.floc.utilities.OpenSansTextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/whatsapp_bg"
        android:text="WhatsApp"
        android:paddingTop="15dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:OpenSans="openSans_regular"
        android:onClick="onClickWhatsappShare" />

    <com.cleanslatetech.floc.utilities.OpenSansTextView
        android:id="@+id/shareEventByFloc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="12dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:OpenSans="openSans_regular"
        android:onClick="onClickFlocAppShare" />

</LinearLayout>