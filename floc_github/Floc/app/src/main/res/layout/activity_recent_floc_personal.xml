<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_recent_floc_personal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_blue"
    tools:context="com.cleanslatetech.floc.activities.RecentFlocPersonalActivity">

    <include layout="@layout/appbar_layout" />

    <com.cleanslatetech.floc.utilities.OpenSansTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="@color/colorPrimary"
        android:text="@string/personal"
        android:textColor="@color/white"
        android:textSize="@dimen/register_screen_texts"
        android:textAlignment="center"
        android:textAllCaps="true"
        app:OpenSans="openSans_regular"/>

    <GridView
        android:id="@+id/grideview_personal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="110dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth" />

</LinearLayout>
