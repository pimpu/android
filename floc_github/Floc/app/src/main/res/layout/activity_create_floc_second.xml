<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_create_floc_second"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context="com.cleanslatetech.floc.activities.CreateFlocActivitySecond">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.cleanslatetech.floc.utilities.OpenSansTextView
                    android:id="@+id/labelMemberCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/member_count"
                    android:textSize="@dimen/sixteen_textsize"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    app:OpenSans="openSans_regular"/>

                <com.cleanslatetech.floc.utilities.OpenSansEditText
                    android:id="@+id/id_member_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/labelMemberCount"
                    android:padding="10dp"
                    android:background="@drawable/black_border"
                    android:inputType="numberSigned"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteen_textsize"
                    app:OpenSans="openSans_regular"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.cleanslatetech.floc.utilities.OpenSansTextView
                    android:id="@+id/labelWebsiteUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/website_url"
                    android:textSize="@dimen/sixteen_textsize"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    app:OpenSans="openSans_regular"/>

                <com.cleanslatetech.floc.utilities.OpenSansEditText
                    android:id="@+id/id_website_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/labelWebsiteUrl"
                    android:padding="10dp"
                    android:background="@drawable/black_border"
                    android:inputType="textWebEditText"
                    android:textSize="@dimen/sixteen_textsize"
                    android:textColor="@color/white"
                    app:OpenSans="openSans_regular"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.cleanslatetech.floc.utilities.OpenSansTextView
                    android:id="@+id/labelCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/city"
                    android:textSize="@dimen/sixteen_textsize"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    app:OpenSans="openSans_regular"/>

                <com.cleanslatetech.floc.utilities.OpenSansEditText
                    android:id="@+id/id_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/labelCity"
                    android:padding="10dp"
                    android:background="@drawable/black_border"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteen_textsize"
                    app:OpenSans="openSans_regular"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.cleanslatetech.floc.utilities.OpenSansTextView
                    android:id="@+id/labelArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/area"
                    android:textSize="@dimen/sixteen_textsize"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    app:OpenSans="openSans_regular"/>

                <com.cleanslatetech.floc.utilities.OpenSansEditText
                    android:id="@+id/id_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/labelArea"
                    android:padding="10dp"
                    android:background="@drawable/black_border"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteen_textsize"
                    app:OpenSans="openSans_regular"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.cleanslatetech.floc.utilities.OpenSansTextView
                    android:id="@+id/labelAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/address"
                    android:textSize="@dimen/sixteen_textsize"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    app:OpenSans="openSans_regular"/>

                <com.cleanslatetech.floc.utilities.OpenSansEditText
                    android:id="@+id/id_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/labelAddress"
                    android:padding="10dp"
                    android:background="@drawable/black_border"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteen_textsize"
                    app:OpenSans="openSans_regular"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.cleanslatetech.floc.utilities.OpenSansTextView
                    android:id="@+id/labelState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/state"
                    android:textSize="@dimen/sixteen_textsize"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    app:OpenSans="openSans_regular"/>

                <com.cleanslatetech.floc.utilities.OpenSansEditText
                    android:id="@+id/id_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/labelState"
                    android:padding="10dp"
                    android:background="@drawable/black_border"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteen_textsize"
                    app:OpenSans="openSans_regular"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.cleanslatetech.floc.utilities.OpenSansTextView
                    android:id="@+id/labelCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/country"
                    android:textSize="@dimen/sixteen_textsize"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    app:OpenSans="openSans_regular"/>

                <com.cleanslatetech.floc.utilities.OpenSansAutoCompleteText
                    android:id="@+id/id_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/labelCountry"
                    android:padding="10dp"
                    android:background="@drawable/black_border"
                    android:ems="10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteen_textsize"
                    app:OpenSans="openSans_regular"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.cleanslatetech.floc.utilities.OpenSansTextView
                    android:id="@+id/labelConcierge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/concierge_services"
                    android:textSize="@dimen/sixteen_textsize"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    app:OpenSans="openSans_regular"/>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/id_spinner_concierge_services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/labelConcierge"
                    android:drawSelectorOnTop="true"
                    android:backgroundTint="@color/white"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.cleanslatetech.floc.utilities.OpenSansTextView
                    android:id="@+id/labelEventMgmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/event_management_services"
                    android:textSize="@dimen/sixteen_textsize"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    app:OpenSans="openSans_regular"/>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/id_spinner_event_mgmt_services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/labelEventMgmt"
                    android:drawSelectorOnTop="true"
                    android:backgroundTint="@color/white"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"/>

            </RelativeLayout>


            <com.cleanslatetech.floc.utilities.OpenSansButton
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:layout_gravity="end"
                android:text="@string/create"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:OpenSans="openSans_regular"
                android:onClick="btnCreateFloc"/>

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/appbar_layout" />

</LinearLayout>
