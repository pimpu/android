<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_transportation_details"
    android:orientation="vertical"
    android:background="@drawable/splash_background"
    tools:context="com.alchemistdigital.buxa.activities.TransportationDetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/id_toolbar_transportDetails"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            android:background="@color/backgroundColor">
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:orientation="vertical">

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_bookId"
                android:textSize="@dimen/enquirydetail_hint_textSize"
                android:textColor="@color/hintGray"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:Segoe="segoe_light" />

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:id="@+id/transDetails_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_bookId"
                android:textSize="@dimen/enquirydetail_text_textSize"
                android:textColor="@color/colorBlack"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:Segoe="segoe_regular" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/horizontalline"/>

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/strDate"
                android:textSize="@dimen/enquirydetail_hint_textSize"
                android:textColor="@color/hintGray"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:Segoe="segoe_light" />

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:id="@+id/transDetails_book_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/strDate"
                android:textSize="@dimen/enquirydetail_text_textSize"
                android:textColor="@color/colorBlack"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:Segoe="segoe_regular" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/horizontalline"/>

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_pickUp_location"
                android:textSize="@dimen/enquirydetail_hint_textSize"
                android:textColor="@color/hintGray"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:Segoe="segoe_light" />

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:id="@+id/transDetails_pick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_pickUp_location"
                android:textSize="@dimen/enquirydetail_text_textSize"
                android:textColor="@color/colorBlack"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:Segoe="segoe_regular" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/horizontalline"/>

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_drop_location"
                android:textSize="@dimen/enquirydetail_hint_textSize"
                android:textColor="@color/hintGray"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:Segoe="segoe_light" />

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:id="@+id/transDetails_drop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_drop_location"
                android:textSize="@dimen/enquirydetail_text_textSize"
                android:textColor="@color/colorBlack"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:Segoe="segoe_regular" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/horizontalline"/>

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_type_of_shipment"
                android:textSize="@dimen/enquirydetail_hint_textSize"
                android:textColor="@color/hintGray"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:Segoe="segoe_light" />

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:id="@+id/transDetails_shipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_type_of_shipment"
                android:textSize="@dimen/enquirydetail_text_textSize"
                android:textColor="@color/colorBlack"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:Segoe="segoe_regular" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/horizontalline"/>

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_gross_weight"
                android:textSize="@dimen/enquirydetail_hint_textSize"
                android:textColor="@color/hintGray"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:Segoe="segoe_light" />

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:id="@+id/transDetails_gross"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_gross_weight"
                android:textSize="@dimen/enquirydetail_text_textSize"
                android:textColor="@color/colorBlack"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:Segoe="segoe_regular" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/horizontalline"/>

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_type_of_package"
                android:textSize="@dimen/enquirydetail_hint_textSize"
                android:textColor="@color/hintGray"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:Segoe="segoe_light" />

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:id="@+id/transDetails_packType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_type_of_package"
                android:textSize="@dimen/enquirydetail_text_textSize"
                android:textColor="@color/colorBlack"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:Segoe="segoe_regular" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/horizontalline"/>

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_no_of_package"
                android:textSize="@dimen/enquirydetail_hint_textSize"
                android:textColor="@color/hintGray"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:Segoe="segoe_light" />

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:id="@+id/transDetails_noOfPack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_no_of_package"
                android:textSize="@dimen/enquirydetail_text_textSize"
                android:textColor="@color/colorBlack"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:Segoe="segoe_regular" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/horizontalline"/>

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_commodity"
                android:textSize="@dimen/enquirydetail_hint_textSize"
                android:textColor="@color/hintGray"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:Segoe="segoe_light" />

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:id="@+id/transDetails_commodity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_commodity"
                android:textSize="@dimen/enquirydetail_text_textSize"
                android:textColor="@color/colorBlack"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:Segoe="segoe_regular" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/horizontalline"/>

            <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_dimensions"
                android:textSize="@dimen/enquirydetail_hint_textSize"
                android:textColor="@color/hintGray"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:Segoe="segoe_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_dimensions_length"
                        android:textSize="@dimen/enquirydetail_hint_textSize"
                        android:textColor="@color/hintGray"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:Segoe="segoe_light" />

                    <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                        android:id="@+id/transDetails_length"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_dimensions_length"
                        android:textSize="@dimen/enquirydetail_text_textSize"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:Segoe="segoe_regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_dimensions_height"
                        android:textSize="@dimen/enquirydetail_hint_textSize"
                        android:textColor="@color/hintGray"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:Segoe="segoe_light" />

                    <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                        android:id="@+id/transDetails_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/hint_dimensions_height"
                        android:textSize="@dimen/enquirydetail_text_textSize"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:Segoe="segoe_regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_dimensions_width"
                        android:textSize="@dimen/enquirydetail_hint_textSize"
                        android:textColor="@color/hintGray"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:Segoe="segoe_light" />
                    <com.alchemistdigital.buxa.utilities.SegoeFontTextView
                        android:id="@+id/transDetails_width"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/hint_dimensions_width"
                        android:textSize="@dimen/enquirydetail_text_textSize"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:Segoe="segoe_regular" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
